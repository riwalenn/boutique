{% extends 'base.html.twig' %}

{% block title %}Nos produits - La Boutique{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-3">
            <h3>Filtrer</h3>
            {{ form_start(form) }}
            {{ form_row(form.string) }}
            <hr>
            {{ form_row(form.categories) }}
            <hr>
            {{ form_row(form.shape) }}
            <hr>
            <legend class="col-form-label">Prix</legend>
            <div class="form-row d-flex flex-row">
                <div class="form-group col-md-5">{{ form_row(form.minPrice) }}</div>
                <div class="col-md-2 text-center">à</div>
                <div class="form-group col-md-5">{{ form_row(form.maxPrice) }}</div>
            </div>
            {{ form_row(form.submit) }}
            {{ form_end(form) }}
        </div>
        <div class="col-md-9">
            <h3>Nos produits</h3>
            <div class="row">
                {% for product in products %}
                    <div class="col-md-4 m-3">
                        <div class="product-item text-center">
                            <a href="{{ path('product', { 'slug' : product.slug}) }}"><img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}"></a>
                            <span class="d-block fst-italic">{{ product.category }}</span>
                            <h5>{{ product.name }}</h5>
                            <span class="d-block">{{ product.subtitle }}</span>
                            <span class="d-block fw-bold">{{ (product.price / 100)|number_format(2) ~ '€' }}</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
