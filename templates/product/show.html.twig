{% extends 'base.html.twig' %}

{% block title %}Nos produits - La Boutique{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-5 my-auto">
            <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
        </div>
        <div class="col-md-7 my-auto">
            <h3>{{ product.name }}</h3>
            <p>{{ product.subtitle }}</p>
            <p class="fw-bold">Prix : {{ (product.price / 100)|number_format(2) ~ 'â‚¬' }}</p>
            <hr>
            <p>{{ product.description }}</p>
            {% if app.user.verified == true %}
                <a href="{{ path('add_to_cart', { 'id': product.id }) }}" class="btn btn-primary">Ajouter au panier</a>
            {% endif %}

        </div>
    </div>
{% endblock %}
