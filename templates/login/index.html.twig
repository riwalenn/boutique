{% extends 'base.html.twig' %}

{% block content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
<form action="{{ path('app_login') }}" method="post">
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <div class="card-body p-5">

                            <h3 class="mb-5">Identifiez-vous</h3>

                            <div class="form-outline mb-4">
                                <label class="form-label" for="username">Email</label>
                                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
                            </div>

                            <div class="form-outline mb-4">
                                <label class="form-label" for="password">Mot de passe</label>
                                <input type="password" id="password" name="_password" class="form-control"/>
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <input type="hidden" name="_target_path" value="{{ path('home') }}"/>
                            </div>
                            <div class="form-outline mb-4">
                                <button class="btn btn-primary btn-block mb-4" type="submit">Connexion</button>
                            </div>
                        </div>
                            <hr class="my-4">
                            <div class="text-center">
                                <p>Nouveau chez La Boutique ? <a href="{{ path('app_register') }}">Cr√©er un compte</a></p>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
{% endblock %}
